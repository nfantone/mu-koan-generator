{
  "paths": {
    "src": ["app.js", "app/**/*.js"],
    "test": ["test/**/*.spec.js", "test/**/*.test.js"]
  },
  "nodemon": {
    "script": "app.js",
    "ignore": ["*.json", ".editorconfig",
        ".eslintrc", ".gitignore", "gulpfile.js", "README.md", "tmp", "coverage"],
    "delay": 1000,
    "verbose": true
  },
  "debug": {
    "debugPort": 5858,
    "webHost": "localhost",
    "webPort": 9090
  },
  "mocha": {
    "require": ["should"]
  },
  "istanbul": {
    "enforceThresholds": false,
    "thresholds": {
      "global": 80
    }
  },
  "eslint": {
    "failOnError": true
  }
}
